{{!-- section --}}
   <section class="section my-4">
       <div class="container text-center">
           <div class="title py-5">
               <h1 >Node File Uploader</h1>
               <p class="subtitle">
                   Upload files to the <strong>server</strong> using Node.js and Express.
               </p>
           </div>

           <div class="row justify-content-center">
               <div class="col-4">
                   <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
                       <div class="row">
                           <div class="col-8">
                               <input type="file" name="images" multiple class="form-control" id="formFile">
                           </div>
                           <div class="col-2">
                               <input type="submit" class="btn btn-warning" value="Upload Images" />
                           </div>
                       </div>
                   </form>
               </div>
           </div>

           {{!-- display images --}}
           <section class="mt-5 display">
               <div class="row gap-5 m-auto align-items-center justify-content-center">
                       {{#each images}}
                           {{#each this}}
                               {{#if imageBase64}}
                                   <div class="col-3">
                                       <div class="card shadow" style="width: 18rem;">
                                           <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top img-fluid img" alt="images">
                                           <div class="card-body">
                                               <h5 class="card-title font-poppins">UI/UX Design</h5>
                                               <p class="text-secondary font-size-09">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                               <a href="#" class="btn btn-info font-size-09 text-light">Read More</a>
                                           </div>
                                       </div>
                                   </div>
                               {{/if}}
                           {{/each}}
                       {{/each}}
               </div>
           </section>

       </div>
   </section>
{{!-- /section --}}